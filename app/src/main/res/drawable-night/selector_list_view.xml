<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/overlayListDark" /> <!-- Semi-transparent black overlay -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#AD191919" /> <!-- No overlay -->
            <corners android:radius="20dp" />
<!--            <solid android:color="@color/overlayListDark" /> &lt;!&ndash; Semi-transparent black overlay &ndash;&gt;-->
        </shape>
    </item>
</selector>
