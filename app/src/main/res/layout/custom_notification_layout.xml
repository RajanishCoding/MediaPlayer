<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Upper Container -->

    <LinearLayout
        android:id="@+id/upper_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notif_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Media Icon"
            android:src="@drawable/icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/notif_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Media Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/notif_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Media Description"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Lower Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Control Buttons -->
        <LinearLayout
            android:id="@+id/lower_upper_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/notif_prev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Previous"
                android:src="@drawable/baseline_skip_previous_24"/>

            <ImageButton
                android:id="@+id/notif_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:contentDescription="Play"
                android:src="@drawable/baseline_play_circle_outline_24"/>

            <ImageButton
                android:id="@+id/notif_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Next"
                android:src="@drawable/baseline_skip_next_24"/>
        </LinearLayout>

        <!-- Time and ProgressBar -->
        <LinearLayout
            android:id="@+id/lower_lower_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/notif_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:paddingHorizontal="5dp"/>

            <!-- Use ProgressBar for progress -->
            <ProgressBar
                android:id="@+id/notif_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:progress="50"
                android:indeterminate="false"/>

            <TextView
                android:id="@+id/notif_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:paddingHorizontal="5dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
