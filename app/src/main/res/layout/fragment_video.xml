<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoFragment"
    style="@style/FilesListBG">

<!--     Custom Toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ToolbarTitleStyle"
                android:text="Video"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp" />



            <ImageButton
                android:id="@+id/search_button"
                style="@style/ToolbarIconsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@id/menu_button"
                android:background="@drawable/ripple_effect"
                android:contentDescription="TODO"
                android:padding="3dp"
                android:src="@drawable/baseline_search_24"
                android:tooltipText="Search"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/menu_button"
                style="@style/ToolbarIconsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ripple_effect"
                android:contentDescription="TODO"
                android:padding="3dp"
                android:src="@drawable/baseline_more_vert_24"
                android:tooltipText="More Options"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/MenuContainer"
        android:layout_width="380dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_sidebar_light"
        android:paddingStart="20dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sortTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sort"
                android:textAlignment="center"
                android:textSize="50px"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10px"
                app:layout_constraintTop_toTopOf="parent"/>
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sortContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sortTitle">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:padding="8dp">

                    <TableRow android:paddingVertical="8dp">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byName"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            style="@style/ButtonStyleToggle"
                            android:layout_marginRight="5dp"
                            android:text="Name"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byDate"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            style="@style/ButtonStyleToggle"
                            android:layout_marginRight="5dp"
                            android:text="Date Added"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_bySize"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            style="@style/ButtonStyleToggle"
                            android:layout_marginRight="5dp"
                            android:text="Size"/>
                    </TableRow>

                    <TableRow>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byLength"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            style="@style/ButtonStyleToggle"
                            android:layout_marginRight="5dp"
                            android:text="Length"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byResol"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            style="@style/ButtonStyleToggle"
                            android:layout_marginRight="5dp"
                            android:text="Resolution"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byFps"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            style="@style/ButtonStyleToggle"
                            android:layout_marginRight="5dp"
                            android:text="FPS"/>
                    </TableRow>

                </TableLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/buttonApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply Changes"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/sortContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/buttonApply"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/found_text_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No video files found"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:visibility="gone" />


    <!-- SwipeRefreshLayout with RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>