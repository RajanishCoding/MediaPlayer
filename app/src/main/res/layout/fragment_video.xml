<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoFragment"
    style="@style/FilesListBG">

<!--     Custom Toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ToolbarTitleStyle"
                android:text="Video"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp" />



            <ImageButton
                android:id="@+id/search_button"
                style="@style/ToolbarIconsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@id/menu_button"
                android:background="@drawable/ripple_effect"
                android:contentDescription="TODO"
                android:padding="3dp"
                android:src="@drawable/baseline_search_24"
                android:tooltipText="Search"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/menu_button"
                style="@style/ToolbarIconsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ripple_effect"
                android:contentDescription="TODO"
                android:padding="3dp"
                android:src="@drawable/baseline_more_vert_24"
                android:tooltipText="More Options"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:id="@+id/found_text_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No video files found"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:visibility="gone" />


    <!-- SwipeRefreshLayout with RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/MenuContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gradient_sidebar_light"
        android:visibility=""
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

<!--        android:layout_marginHorizontal="30dp"-->
<!--        android:layout_marginVertical="100dp"-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sortContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/sortTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:text="Sort"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sortLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sortTitle">


                <TableLayout
                    android:id="@+id/sortTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:stretchColumns="*"
                    app:layout_constraintTop_toTopOf="parent">

                    <TableRow
                        android:paddingVertical="4dp"
                        android:layout_width="wrap_content"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byName"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:text="Name" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byDate"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:text="Date Added" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_bySize"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="Size" />
                    </TableRow>

                    <TableRow
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byLength"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:text="Length" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byResol"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:text="Resolution" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byFps"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="FPS" />
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/sortTable">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sort_Asc"
                        style="@style/ButtonStyleToggle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="8dp"
                        android:drawableStart="@drawable/baseline_fast_rewind_24"
                        android:paddingHorizontal="40dp"
                        android:drawablePadding="0dp"
                        android:text="Ascending"/>



                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sort_Desc"
                        style="@style/ButtonStyleToggle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:drawableStart="@drawable/baseline_fast_forward_24"
                        android:paddingHorizontal="40dp"
                        android:drawablePadding="0dp"
                        android:text="Descending" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/sortContainer">

                <TextView
                    android:id="@+id/detailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Details"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/detailsTitle">


                    <TableLayout
                        android:id="@+id/detailsTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:stretchColumns="*"
                        app:layout_constraintTop_toTopOf="parent">

                        <TableRow
                            android:paddingVertical="4dp"
                            android:layout_width="wrap_content"
                            >

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/details_Dur"
                                style="@style/ButtonStyleToggle"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="Name" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/details_Date"
                                style="@style/ButtonStyleToggle"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="Date Added" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/details_Size"
                                style="@style/ButtonStyleToggle"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:text="Size" />
                        </TableRow>

                        <TableRow
                            android:paddingVertical="4dp"
                            android:layout_width="match_parent"
                            >

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/details_Length"
                                style="@style/ButtonStyleToggle"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="Length" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/details_Resol"
                                style="@style/ButtonStyleToggle"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="5dp"
                                android:text="Resolution" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/details_Fps"
                                style="@style/ButtonStyleToggle"
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:text="FPS" />
                        </TableRow>

                    </TableLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/detailsContainer">

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:text="Cancel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailsContainer" />

                <Button
                    android:id="@+id/buttonApply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Apply"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/buttonApply" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>