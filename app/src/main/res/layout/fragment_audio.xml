    <TextView
        android:id="@+id/found_text_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No audio files found"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:visibility="gone" />



    <!-- SwipeRefreshLayout with RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/MenuContainer_Audio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gradient_sidebar_light"
        android:visibility="visible"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sortTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10px"
                android:text="Sort"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50px"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sortContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sortTitle">


                <TableLayout
                    android:id="@+id/sortTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:stretchColumns="*"
                    app:layout_constraintTop_toTopOf="parent">

                    <TableRow
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byName"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:text="Name" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byDate"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:text="Date Added" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_bySize"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="Size" />
                    </TableRow>

                    <TableRow
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byLength"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:text="Length" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byResol"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="5dp"
                            android:text="Resolution" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/sort_byFps"
                            style="@style/ButtonStyleToggle"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="FPS" />
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/sortTable">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sort_Asc"
                        style="@style/ButtonStyleToggle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="8dp"
                        android:drawableStart="@drawable/baseline_fast_rewind_24"
                        android:paddingHorizontal="40dp"
                        android:drawablePadding="5dp"
                        android:text="Ascending"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sort_Desc"
                        style="@style/ButtonStyleToggle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:drawableStart="@drawable/baseline_fast_forward_24"
                        android:paddingHorizontal="40dp"
                        android:drawablePadding="5dp"
                        android:text="Descending" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/buttonApply_Audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Apply Changes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sortContainer" />

            <Button
                android:id="@+id/buttonCancel_Audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonApply_Audio" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>