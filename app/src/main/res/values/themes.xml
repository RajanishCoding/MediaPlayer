<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MediaPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--        <item name="colorPrimary">@color/my_light_primary</item>-->
        <!--        <item name="colorPrimaryVariant">@color/my_light_primary_variant</item>-->
        <!--        <item name="colorOnPrimary">@color/my_light_on_primary</item>-->

        <!--        <item name="android:colorBackground">@color/my_dark_background</item>-->
        <!--        <item name="android:colorForeground">@color/white</item>-->
        <!--        <item name="colorSurface">@color/my_light_surface</item>-->
        <!--        <item name="colorOnSurface">@color/white</item>-->

        <!--        <item name="colorError">@color/my_light_error</item>-->
        <!--        <item name="colorOnError">@color/my_light_on_error</item>-->

        <!-- Status Bar Colors -->
        <item name="android:statusBarColor">@color/toolbar_background</item>

        <!-- Customize SeekBar colors -->
        <item name="colorControlActivated">@color/overlayColorRect</item> <!-- Progress color -->
        <item name="colorControlNormal">@color/white</item> <!-- Thumb color -->

        <!-- Overlay Colors -->
        <item name="overlayColor">@color/overlayButtonLight</item> <!-- Light theme: 20% black -->
    </style>



    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="ButtonStyleVariant" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_background_variant</item>
        <item name="android:textColor">@color/button_text_variant</item>
    </style>

    <!-- Text View Style -->
    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_view_text</item>
    </style>

    <style name="TextViewStyleVariant" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_view_text_variant</item>
    </style>

    <!-- SeekBar Style -->
    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="colorControlNormal">@color/button_background_variant</item> <!-- Default color -->
        <item name="colorControlActivated">@color/button_background</item> <!-- Color when activated/progress -->
        <item name="colorControlHighlight">@color/button_background</item>
    </style>

    <!-- Linear Layout Style -->
    <style name="FilesListBG">
        <item name="android:background">@drawable/background_shape</item>
    </style>


    <!-- Navigation Bar View Styles -->
    <style name="NavBarStyle">
        <item name="android:background">@color/nav_bgcolor</item>
        <item name="itemIconTint">@color/selector_navbar_items</item>
        <item name="itemTextColor">@color/nav_text_color</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_background</item>
    </style>

    <!-- Toolbar Foreground Styles -->
    <style name="ToolbarIconsStyle">
        <item name="android:tint">@color/toolbar_icons</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@color/toolbar_text</item>
    </style>


    <!-- Toolbar Media Style -->
    <style name="ToolbarStyleMedia" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_background_dark</item>
    </style>

    <!-- Toolbar Foreground Styles -->
    <style name="ToolbarTitleStyleMedia">
        <item name="android:textColor">@color/toolbar_text_dark</item>
    </style>


<!--    <style name="Theme.C6_MusicApp" parent="Base.Theme.C6_MusicApp" />-->
</resources>